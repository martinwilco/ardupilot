include ../KakuteH7Mini/hwdef.dat

# SPI3 for emulated SDCard
PA15 SDCARD_CS CS
PC10 SPI3_SCK SPI3
PC11 SPI3_MISO SPI3
PC12 SPI3_MOSI SPI3

# Add emulated SDcard as spi device
SPIDEV sdcard   SPI3 DEVID1 SDCARD_CS   MODE0 400*KHZ 25*MHZ

# Enable filesystem and directories, mandatory to enable scripting
define HAL_OS_FATFS_IO 1
define HAL_BOARD_LOG_DIRECTORY "/APM/LOGS"